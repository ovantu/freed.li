.row.top-margin
  .large-7.columns
    .to_evaluate
      - @users_evaluations.each do |post|
        .evaluate_post
          %p= post.content
          %p
            = link_to "accept", accept_post_path(post.id), class: "button small", method: :post
            = link_to "decline", decline_post_path(post.id), class: "button small alert", method: :delete
            = link_to "pass", pass_post_path(post.id), class: "button small", method: :put
            

    - @posts.each do |post|
      .panel
        = post.content
        | status:
        = post.status
        | creator:
        = post.creator_id
        + evaluations:
       

  .large-5.columns
    .codex
      .codex_why
        = t('codex_why')
      .codex_why_content  
        =@feed.goal
      .codex_how
        = t('codex_how')
      .codex_how_content
        = t('how_start')
        = t(@feed.lang)
        = t('how_end')
      .codex_what= t('codex_what')
      .codex_what_content
        %ul.square
          - if @feed.rule1 != ""
            %li= @feed.rule1
          - if @feed.rule2 != ""
            %li= @feed.rule2
          - if @feed.rule3 != ""
            %li= @feed.rule3
          - if @feed.rule4 != ""
            %li= @feed.rule4
          - if @feed.rule5 != ""
            %li= @feed.rule5
      - if @feed.misc.nil?
        .codex_misc
          = t('codex_misc')
          = @feed.misc
      - if @feed.description.nil?
        .codex_description
          = t('codex_description')
          = @feed.description
    
    = link_to 'New Post', new_post_for_feed_path(@feed.id), class: "button radius"
    %p
      %b In Evaluation
      %ul
        - @evaluated_posts.each do |ep|
          %li= ep.content + " | " + ep.users_evaluation(current_user.id).status



