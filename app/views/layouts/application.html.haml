!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Wispper'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Wispper'}"}
    = stylesheet_link_tag "application"
    -# Foundation 5 won't work with Rails Turbolinks
    -# Modernizr is required for Zurb Foundation
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    .off-canvas-wrap
      .inner-wrap
        %nav.top-bar.hide-for-small
          %ul.title-area
            %li.name
              %h1= link_to "freed.ly", root_path
          %section.top-bar-section.right
            %ul
              - if user_signed_in?
                %li.divider
                %li.has-dropdown.not-click
                  %a{href: "#"} My...
                  %ul.dropdown
                    %li
                      %a{href: "#"} ... freeds
                    %li
                      %a{href: "#"} ... posts
                    %li
                      %a{href: "#"} ... curations
                    %li
                      %a{href: "#"} ... contributions
                      %li
                        = link_to "profile", user_path(current_user.id)
              - if user_signed_in?
                %li.divider
                %li.has-dropdown.not-click
                  %a{href: "#"}= current_user.name
                  %ul.dropdown
                    %li
                      = link_to "profile", user_path(current_user.id)
                    %li
                      = link_to 'Edit account', edit_user_registration_path
                    %li
                      = link_to 'Logout', destroy_user_session_path, :method=>'delete'
              - else
                %li.divider
                %li.has-dropdown.not-click
                  %a{href: "#"} Login/Signup
                  %ul.dropdown
                    %li
                      = link_to 'Login', new_user_session_path
                    %li
                      = link_to 'Sign up', new_user_registration_path 

              %li.divider
              %li
                %a{href: "http://foundation.zurb.com/business/services.html"} Business
              %li.divider
              %li
                %a{href: "http://foundation.zurb.com/docs"} Docs
 
 
 
 
        %nav.tab-bar.show-for-small
          %a.left-off-canvas-toggle.menu-icon
            %span Foundation
        %aside.left-off-canvas-menu
          %ul.off-canvas-list
            %li
              %label.first freedster
            %li
              %a{href: "#"}
          %hr/
          %ul.off-canvas-list
            %li
              %label Setup
            %li
              %a{href: "#css"} CSS
            %li
              %a{href: "../sass.html"} Sass
            %li
              %a{href: "#rails"} Rails
            %li
              %a{href: "global.html"} Global Styles
            %li
              %a{href: "#upgrading"} Upgrading
            %hr/
            %li
              %label Structure
            %li
              %a{href: "#mediaQueries"} Media Queries
            %li
              %a{href: "grid.html"} Grid
            %li
              %a{href: "block_grid.html"} Block Grid
            %li
              %a{href: "interchange.html"}
                Interchange Responsive Content
                %span.label JS
            %li
              %a{href: "thumbnails.html"} Thumbnails
            %li
              %a{href: "#utilityClasses"} Utility Classes
            %li
              %a{href: "#rtl"} Right-to-Left Support
        %a.exit-off-canvas{href: "#"}
        %section{role: "main"}
          = yield
        -# Foundation 5 won't work when application.js is included in HEAD
  = javascript_include_tag "application"
