.row.top-margin
  .large-3.large-offset-2.columns
    %h1= @user.name
    %p= @user.email

    
  .large-6.end.columns
  
    .profile_trustworthiness
      .row
        .small-12.columns
          %h3
            = t("user_trustworthiness")
            = trustworthiness_in_precent
      .row
        .small-5.columns
          = t("active_posts")
        .small-1.columns
          = @user.trustworthiness[1]
        .small-5.columns
          = t("rejected_posts")
        .small-1.columns
          = @user.trustworthiness[2]
  
    .profile_feeds
      %h3= t('user_feed_stats')
      .row
        .small-5.columns
          = t("created_feeds")
        .small-1.columns
          = @user.feeds.count
        .small-5.columns
          = t("contributor_in_feeds")
        .small-1.columns
          = @contributed_feeds.count
      .row
        .small-5.columns
          = t("free_feeds")
        .small-1.columns
          = @user.feeds.where(status: "free").length
        .small-5.columns
          = t("active_feed")
        .small-1.columns
          = @user.feeds.where(status: "active").length
      

    .profile_posts
      %h3= t('user_post_stats')
      .row
        .small-5.columns
          = t("created_posts")
        .small-1.columns
          = @user.posts.count
        .small-5.columns
          = t("posts_in_evaluation")
        .small-1.columns
          = @user.posts.where(status: ["in_evaluation", "free"]).length
      .row
        .small-5.columns
          = t("active_posts")
        .small-1.columns
          = @user.active_posts.length
        .small-5.columns
          = t("rejected_posts")
        .small-1.columns
          = @user.rejected_posts.length


    .profile_evaluations
      %h3= t('user_evaluation_stats')
      .row
        .small-5.columns
          = t("evaluated_posts")
        .small-1.columns
          = @user.evaluations.count
        .small-5.columns
          = t("pending_posts")
        .small-1.columns
          = @user.evaluations.where(status: "pending").length
      .row
        .small-5.columns
          = t("accepted_posts")
        .small-1.columns
          = @user.evaluations.where(status: "accepted").length
        .small-5.columns
          = t("declined_posts")
        .small-1.columns
          = @user.evaluations.where(status: "declined").length
      .row
        .small-5.columns
          = t("passed_posts")
        .small-1.columns
          = @user.evaluations.where(status: "passed").length
        .small-5.columns
          = t("too_late_posts")
        .small-1.columns
          = @user.evaluations.where(status: "too_late").length






