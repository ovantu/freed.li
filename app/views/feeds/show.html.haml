.row
  .large-12.columns
    %h1=@feed.goal
.row
  .large-8.columns
    - @feed.posts.each do |post|
      .panel= post.content
  .large-4.columns
    = link_to 'New Post', new_post_for_feed_path(@feed.id), class: "button radius"
    .codex_what= t('what')
    %ul
      - if @feed.rule1 != ""
        %li= @feed.rule1
      - if @feed.rule2 != ""
        %li= @feed.rule2
      - if @feed.rule3 != ""
        %li= @feed.rule3
      - if @feed.rule4 != ""
        %li= @feed.rule4
      - if @feed.rule5 != ""
        %li= @feed.rule5
    %p
      %b Misc:
      = @feed.misc
    %p
      %b Description:
      = @feed.description
    %p
      = link_to 'Edit', edit_feed_path(@feed)
      \|
      = link_to 'Back', feeds_path



