.row
  .large-12.columns.post_content
    = simple_format(post.content.html_safe)
.row
  .small-5.columns
    .post_footer.post_creator
      = post.creator.name if post.anonymity == "visible" and post.status == "active"
      = t("post_is_free") if post.status == "free"
  .small-3.columns
    .post_footer
      -unless @evaluated_active_post[post.id] == nil
        %span.has-tip.tip-bottom{class: "radius", "data-options" => "disable_for_touch:true", "data-tooltip" => "", title: t('user_tooltip_' + @evaluated_active_post[post.id].to_s)}
          = t("user_eval_" + @evaluated_active_post[post.id].to_s)
  .small-4.columns
    .post_footer.post_datetime
      = l(post.created_at.localtime, format: :long)